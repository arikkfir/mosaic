<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.mosaic</groupId>
        <artifactId>parent</artifactId>
        <version>1.0.0-SNAPSHOT</version>
        <relativePath>../../parent/pom.xml</relativePath>
    </parent>
    <groupId>org.mosaic.it</groupId>
    <artifactId>runner</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>jar</packaging>
    <name>Mosaic :: IT :: Runner</name>
    <url>https://github.com/arikkfir/mosaic/it/runner/</url>
    <distributionManagement>
        <site>
            <id>github</id>
            <name>GitHub</name>
            <url>file:///var/www/html/mosaic/it/runner</url>
        </site>
    </distributionManagement>

    <dependencies>

        <!-- ======================================================================================================= -->
        <!-- Depend on 'launcher' module to start the server                                                         -->
        <!-- ======================================================================================================= -->
        <dependency>
            <groupId>org.mosaic</groupId>
            <artifactId>launcher</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- ======================================================================================================= -->
        <!-- Communication with the bootstrapped Mosaic server is done via SSH                                       -->
        <!-- ======================================================================================================= -->
        <dependency>
            <groupId>net.schmizz</groupId>
            <artifactId>sshj</artifactId>
        </dependency>
        <dependency>
            <groupId>commons-io</groupId>
            <artifactId>commons-io</artifactId>
        </dependency>

        <!-- ======================================================================================================= -->
        <!-- Required for real usage in server bootstrapping and in the tests code                                   -->
        <!-- ======================================================================================================= -->
        <dependency>
            <groupId>com.google.guava</groupId>
            <artifactId>guava</artifactId>
        </dependency>
        <dependency>
            <groupId>com.google.code.findbugs</groupId>
            <artifactId>jsr305</artifactId>
        </dependency>

        <!-- ======================================================================================================= -->
        <!-- The test database used                                                                                  -->
        <!-- ======================================================================================================= -->
        <dependency>
            <groupId>org.hsqldb</groupId>
            <artifactId>hsqldb</artifactId>
            <classifier>jdk6debug</classifier>
        </dependency>

        <!-- ======================================================================================================= -->
        <!-- Logging API(s). Note that logback and XXX-over-slf4j are in 'runtime' scope to prevent direct usage     -->
        <!-- ======================================================================================================= -->
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
        </dependency>

    </dependencies>
</project>

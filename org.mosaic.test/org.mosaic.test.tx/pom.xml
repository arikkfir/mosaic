<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.mosaic.poms</groupId>
        <artifactId>org.mosaic.poms.parent</artifactId>
        <version>1.0.0-SNAPSHOT</version>
        <relativePath>../../org.mosaic.poms/org.mosaic.poms.parent/pom.xml</relativePath>
    </parent>

    <groupId>org.mosaic.test</groupId>
    <artifactId>org.mosaic.test.tx</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <name>Mosaic :: Test :: Transaction</name>
    <packaging>bundle</packaging>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <configuration>
                    <instructions>
                        <Require-Capability>
                            org.mosaic.boot,
                            org.mosaic.transaction
                        </Require-Capability>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>org.mosaic</groupId>
            <artifactId>org.mosaic.api</artifactId>
            <version>[1.0.0-SNAPSHOT,2)</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.mosaic.server</groupId>
            <artifactId>org.mosaic.server.api</artifactId>
            <version>[1.0.0-SNAPSHOT,2)</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>org.springframework.context</artifactId>
        </dependency>
    </dependencies>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.mosaic.poms</groupId>
                <artifactId>org.mosaic.poms.bom</artifactId>
                <version>1.0.0-SNAPSHOT</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>

</project>

<?xml version="1.0" encoding="UTF-8"?>

<configuration debug="false">

    <!-- =========================================================================================================== -->
    <!--  Ensures that logger levels in Logback are applied to logger levels in JUL (java.util.logging)              -->
    <!--  This allows us to include the 'jul-over-slf4j' brdige without severe performance penalty.                  -->
    <!-- =========================================================================================================== -->
    <contextListener class="ch.qos.logback.classic.jul.LevelChangePropagator">
        <resetJUL>true</resetJUL>
    </contextListener>

    <!-- =========================================================================================================== -->
    <!--  console: this appender logs everything to the standard output stream of the process (stdout)               -->
    <!-- =========================================================================================================== -->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.out</target>
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%date{HH:mm:ss.SSS} [%-10.10thread] [%-5level] %-40.40logger{40} Â» %message%n%ex{full}</pattern>
        </encoder>
    </appender>

    <!-- =========================================================================================================== -->
    <!--  Logger configurations                                                                                      -->
    <!-- =========================================================================================================== -->

    <!-- the ROOT logger redirects all output to the global dispatcher appender -->
    <root level="INFO">
        <appender-ref ref="console"/>
    </root>

    <logger name="com.google.common.io.Closeables" level="OFF"/>
    <logger name="net.schmizz.sshj" level="WARN"/>
    <logger name="org.osgi" level="OFF"/>

</configuration>

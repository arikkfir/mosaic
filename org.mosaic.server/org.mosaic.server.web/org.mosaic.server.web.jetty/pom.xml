<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.mosaic.poms</groupId>
        <artifactId>org.mosaic.poms.parent</artifactId>
        <version>1.0.0-SNAPSHOT</version>
        <relativePath>../../../org.mosaic.poms/org.mosaic.poms.parent/pom.xml</relativePath>
    </parent>

    <groupId>org.mosaic.server.web</groupId>
    <artifactId>org.mosaic.server.web.jetty</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <name>Mosaic :: Server :: Web :: Jetty</name>
    <packaging>bundle</packaging>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <configuration>
                    <instructions>
                        <Require-Capability>org.mosaic.server.boot</Require-Capability>
                        <Provide-Capability>org.mosaic.server.web</Provide-Capability>
                        <Embed-Dependency>jetty*</Embed-Dependency>
                        <Embed-Transitive>true</Embed-Transitive>

                        <!-- no need to import jetty since we're embedding it -->
                        <Import-Package>
                            org.mosaic.web;version="[1.0,1.1)",
                            javax.servlet*;version="2.6",
                            !org.eclipse.jetty*,
                            !org.mortbay*,
                            *
                        </Import-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <!-- ============================================================ -->
        <!-- Mosaic APIs                                                  -->
        <!-- ============================================================ -->
        <dependency>
            <groupId>org.mosaic</groupId>
            <artifactId>org.mosaic.api</artifactId>
            <version>[1.0.0-SNAPSHOT,2)</version>
        </dependency>
        <dependency>
            <groupId>org.mosaic.server</groupId>
            <artifactId>org.mosaic.server.api</artifactId>
            <version>[1.0.0-SNAPSHOT,2)</version>
        </dependency>
        <!-- ============================================================ -->
        <!-- Spring Framework                                             -->
        <!-- ============================================================ -->
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>org.springframework.beans</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>org.springframework.context</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>org.springframework.core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>org.springframework.web</artifactId>
        </dependency>
        <!-- ============================================================ -->
        <!-- Joda Time                                                    -->
        <!-- ============================================================ -->
        <dependency>
            <groupId>joda-time</groupId>
            <artifactId>joda-time</artifactId>
        </dependency>
        <!-- ============================================================ -->
        <!-- Jetty                                                        -->
        <!-- ============================================================ -->
        <dependency>
            <groupId>org.eclipse.jetty</groupId>
            <artifactId>jetty-ajp</artifactId>
            <version>8.1.3.v20120416</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.eclipse.jetty</groupId>
            <artifactId>jetty-io</artifactId>
            <version>8.1.3.v20120416</version>
        </dependency>
        <dependency>
            <groupId>org.eclipse.jetty</groupId>
            <artifactId>jetty-server</artifactId>
            <version>8.1.3.v20120416</version>
        </dependency>
        <dependency>
            <groupId>org.eclipse.jetty</groupId>
            <artifactId>jetty-servlet</artifactId>
            <version>8.1.3.v20120416</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.eclipse.jetty.orbit</groupId>
            <artifactId>javax.servlet</artifactId>
            <version>3.0.0.v201112011016</version>
        </dependency>
        <dependency>
            <groupId>org.eclipse.jetty</groupId>
            <artifactId>jetty-servlets</artifactId>
            <version>8.1.3.v20120416</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.eclipse.jetty</groupId>
            <artifactId>jetty-util</artifactId>
            <version>8.1.3.v20120416</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.mosaic.poms</groupId>
                <artifactId>org.mosaic.poms.bom</artifactId>
                <version>1.0.0-SNAPSHOT</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>

</project>

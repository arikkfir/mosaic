<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.mosaic.poms</groupId>
        <artifactId>org.mosaic.poms.parent</artifactId>
        <version>1.0.0-SNAPSHOT</version>
        <relativePath>../../org.mosaic.poms/org.mosaic.poms.parent/pom.xml</relativePath>
    </parent>

    <groupId>org.mosaic.server</groupId>
    <artifactId>org.mosaic.server.boot</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <name>Mosaic :: Server :: Bootstrapper</name>
    <packaging>bundle</packaging>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>2.3.7</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>

                        <!-- This is a capability signaling the server bootstrapping - other server bundles should require it -->
                        <Provide-Capability>org.mosaic.server.boot</Provide-Capability>

                        <!-- Since no other bundle will track this bundle's lifecycle, we must take care of our own -->
                        <Bundle-Activator>org.mosaic.server.boot.impl.BundleBootstrapper</Bundle-Activator>

                        <!-- embed javassist for weavers -->
                        <Embed-Dependency>javassist</Embed-Dependency>
                        <Embed-Transitive>true</Embed-Transitive>

                        <!-- Since we're implementing some Mosaic-API types, our import-package policy needs to be stricter -->
                        <Import-Package>
                            org.mosaic;version="[1.0,1.1)",
                            org.mosaic.lifecycle;version="[1.0,1.1)",
                            org.mosaic.osgi;version="[1.0,1.1)",
                            org.osgi.framework;version="[1.6,1.7)",
                            org.osgi.util.tracker;version="[1.5,1.6)",
                            !com.sun*,
                            *
                        </Import-Package>

                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <!-- ============================================================ -->
        <!-- Mosaic APIs                                                  -->
        <!-- ============================================================ -->
        <dependency>
            <groupId>org.mosaic</groupId>
            <artifactId>org.mosaic.api</artifactId>
            <version>[1.0.0-SNAPSHOT,2)</version>
        </dependency>
        <!-- ============================================================ -->
        <!-- OSGi APIs                                                    -->
        <!-- ============================================================ -->
        <dependency>
            <groupId>org.apache.felix</groupId>
            <artifactId>org.apache.felix.framework</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.felix</groupId>
            <artifactId>org.apache.felix.log</artifactId>
        </dependency>
        <!-- ============================================================ -->
        <!-- Spring Framework                                             -->
        <!-- ============================================================ -->
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>org.springframework.beans</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>org.springframework.context</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>org.springframework.core</artifactId>
        </dependency>
        <!-- ============================================================ -->
        <!-- Bytecode Weaving Framework                                   -->
        <!-- ============================================================ -->
        <dependency>
            <groupId>org.javassist</groupId>
            <artifactId>javassist</artifactId>
        </dependency>
    </dependencies>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.mosaic.poms</groupId>
                <artifactId>org.mosaic.poms.bom</artifactId>
                <version>1.0.0-SNAPSHOT</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>

</project>

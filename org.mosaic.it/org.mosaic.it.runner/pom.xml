<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.mosaic</groupId>
        <artifactId>org.mosaic.parent</artifactId>
        <version>1.0.0-SNAPSHOT</version>
        <relativePath>../../org.mosaic.parent/pom.xml</relativePath>
    </parent>

    <groupId>org.mosaic.it</groupId>
    <artifactId>org.mosaic.it.runner</artifactId>
    <name>Mosaic :: IT :: Runner</name>
    <description>Mosaic integration testing runner module. This module provides a JUnit Runner, used for running JUnit
        tests that require an actual Mosaic server instance. It boots up a server instance for each test annotated with a
        @RunWith and shuts it down after the test terminates. This is the core method of testing Mosaic Server modules.
    </description>
    <packaging>jar</packaging>

    <dependencies>

        <!-- mosaic server -->
        <dependency>
            <groupId>org.mosaic</groupId>
            <artifactId>org.mosaic.core</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- logback -->
        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-core</artifactId>
        </dependency>
        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-classic</artifactId>
        </dependency>

        <!-- test APIs -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
        </dependency>

    </dependencies>

    <!-- scm -->
    <scm>
        <connection>scm:git:git@github.com:arikkfir/mosaic.git/org.mosaic.it/${project.artifactId}</connection>
        <developerConnection>scm:git:git@github.com:arikkfir/mosaic.git/org.mosaic.it/${project.artifactId}</developerConnection>
        <tag>HEAD</tag>
    </scm>

</project>

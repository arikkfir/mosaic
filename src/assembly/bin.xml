<?xml version="1.0" encoding="UTF-8"?>

<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

    <id>bin</id>
    <formats>
        <format>tar.bz2</format>
        <format>tar.gz</format>
        <format>zip</format>
    </formats>
    <baseDirectory>mosaic-${project.version}</baseDirectory>

    <files>
        <!-- Include the version file -->
        <file>
            <source>${project.basedir}/src/assembly/version</source>
            <outputDirectory>/</outputDirectory>
            <fileMode>755</fileMode>
            <filtered>true</filtered>
            <lineEnding>unix</lineEnding>
        </file>
    </files>

    <fileSets>
        <!-- Include the informational files -->
        <fileSet>
            <directory>${project.basedir}</directory>
            <outputDirectory>/</outputDirectory>
            <directoryMode>755</directoryMode>
            <fileMode>644</fileMode>
            <includes>
                <include>README*</include>
                <include>LICENSE*</include>
                <include>NOTICE*</include>
                <include>TODO*</include>
            </includes>
        </fileSet>

        <!-- include the 'apps' dir -->
        <fileSet>
            <directory>${project.basedir}/src/assembly/apps</directory>
            <outputDirectory>/apps</outputDirectory>
            <directoryMode>755</directoryMode>
            <fileMode>644</fileMode>
            <filtered>true</filtered>
            <lineEnding>unix</lineEnding>
        </fileSet>

        <!-- include the 'bin' dir -->
        <fileSet>
            <directory>${project.basedir}/src/assembly/bin</directory>
            <outputDirectory>/bin</outputDirectory>
            <directoryMode>755</directoryMode>
            <fileMode>755</fileMode>
            <filtered>true</filtered>
            <lineEnding>unix</lineEnding>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>

        <!-- include the 'etc' dir -->
        <fileSet>
            <directory>${project.basedir}/src/assembly/etc</directory>
            <outputDirectory>/etc</outputDirectory>
            <directoryMode>755</directoryMode>
            <fileMode>644</fileMode>
            <filtered>true</filtered>
            <lineEnding>unix</lineEnding>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>

        <!-- include the 'lib' dir -->
        <fileSet>
            <directory>${project.basedir}/src/assembly/lib</directory>
            <outputDirectory>/lib</outputDirectory>
            <directoryMode>755</directoryMode>
            <fileMode>644</fileMode>
            <filtered>true</filtered>
            <lineEnding>unix</lineEnding>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
    </fileSets>

    <moduleSets>
        <moduleSet>
            <includes>
                <include>org.mosaic:launcher</include>
            </includes>
            <binaries>
                <outputDirectory>/bin</outputDirectory>
                <fileMode>644</fileMode>
                <directoryMode>755</directoryMode>
                <includeDependencies>false</includeDependencies>
                <unpack>false</unpack>
                <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
            </binaries>
        </moduleSet>
        <moduleSet>
            <includes>
                <include>org.mosaic:api</include>
                <include>org.mosaic:core</include>
                <include>org.mosaic:lifecycle</include>
            </includes>
            <binaries>
                <outputDirectory>/boot</outputDirectory>
                <fileMode>644</fileMode>
                <directoryMode>755</directoryMode>
                <unpack>false</unpack>
                <includeDependencies>false</includeDependencies>
            </binaries>
        </moduleSet>
        <moduleSet>
            <includes>
                <include>org.mosaic:admin</include>
            </includes>
            <binaries>
                <outputDirectory>/lib</outputDirectory>
                <fileMode>644</fileMode>
                <directoryMode>755</directoryMode>
                <includeDependencies>false</includeDependencies>
                <unpack>false</unpack>
            </binaries>
        </moduleSet>
    </moduleSets>

</assembly>

<project xmlns="http://maven.apache.org/DECORATION/1.3.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/DECORATION/1.3.0 http://maven.apache.org/xsd/decoration-1.3.0.xsd"
         name="${project.name}">

    <bannerLeft>
        <name>Mosaic</name>
        <href>http://github.org/arikkfir/mosaic</href>
        <src>/images/mosaic-400x90.png</src>
    </bannerLeft>

    <publishDate position="right"/>

    <version position="left"/>

    <poweredBy>
        <logo name="Apache Maven"
              href="http://maven.apache.org"
              img="http://maven.apache.org/doxia/doxia-sitetools/doxia-decoration-model/images/logos/maven-feather.png"
              position="left"
              alt="Powered by Apache Maven"
              target="_blank"/>
        <logo name="Spring Framework"
              href="http://www.springframework.org"
              img="http://www.springsource.org/sites/all/themes/s2org11/images/icon_social_s2.png"
              position="left"
              alt="Powered by Spring"
              target="_blank"/>
    </poweredBy>

    <skin>
        <groupId>org.apache.maven.skins</groupId>
        <artifactId>maven-fluido-skin</artifactId>
        <version>1.3.0</version>
    </skin>

    <body>
        <menu>
            <item name="Overview" href="index.html"/>
        </menu>
        <menu name="Reports" ref="reports"/>
    </body>

</project>

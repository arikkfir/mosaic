<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.mosaic.poms</groupId>
        <artifactId>org.mosaic.poms.parent</artifactId>
        <version>1.0.0-SNAPSHOT</version>
        <relativePath>../../org.mosaic.poms/org.mosaic.poms.parent/pom.xml</relativePath>
    </parent>

    <groupId>org.mosaic</groupId>
    <artifactId>org.mosaic.idea</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <name>Mosaic :: IDEA</name>
    <packaging>jar</packaging>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.4</version>
                <configuration>
                    <failOnWarning>false</failOnWarning>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>

        <dependency>
            <groupId>org.mosaic</groupId>
            <artifactId>org.mosaic.runner</artifactId>
            <version>[1.0.0-SNAPSHOT,2)</version>
        </dependency>

        <!-- ============================================================ -->
        <!-- These dependencies are here only so IntelliJ will "Make"     -->
        <!-- them before it runs our server. This module is never         -->
        <!-- released and exists solely for working inside IntelliJ IDEA. -->
        <!-- ============================================================ -->
        <dependency>
            <groupId>org.mosaic</groupId>
            <artifactId>org.mosaic.api</artifactId>
            <version>[1.0.0-SNAPSHOT,2)</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.mosaic.server</groupId>
            <artifactId>org.mosaic.server.api</artifactId>
            <version>[1.0.0-SNAPSHOT,2)</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.mosaic.server</groupId>
            <artifactId>org.mosaic.server.boot</artifactId>
            <version>[1.0.0-SNAPSHOT,2)</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.mosaic.server</groupId>
            <artifactId>org.mosaic.server.config</artifactId>
            <version>[1.0.0-SNAPSHOT,2)</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.mosaic.server</groupId>
            <artifactId>org.mosaic.server.shell</artifactId>
            <version>[1.0.0-SNAPSHOT,2)</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.mosaic.server</groupId>
            <artifactId>org.mosaic.server.shell.commands</artifactId>
            <version>[1.0.0-SNAPSHOT,2)</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.mosaic.server</groupId>
            <artifactId>org.mosaic.server.transaction</artifactId>
            <version>[1.0.0-SNAPSHOT,2)</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.mosaic.server.web</groupId>
            <artifactId>org.mosaic.server.web.application</artifactId>
            <version>[1.0.0-SNAPSHOT,2)</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.mosaic.server.web</groupId>
            <artifactId>org.mosaic.server.web.dispatcher</artifactId>
            <version>[1.0.0-SNAPSHOT,2)</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.mosaic.server.web</groupId>
            <artifactId>org.mosaic.server.web.jetty</artifactId>
            <version>[1.0.0-SNAPSHOT,2)</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.mosaic.admin</groupId>
            <artifactId>org.mosaic.admin</artifactId>
            <version>[1.0.0-SNAPSHOT,2)</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>

</project>

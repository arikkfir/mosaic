<?xml version="1.0" encoding="UTF-8"?>

<application>

    <virtual-hosts>
        <virtual-host>admin.localhost.infolinks.local</virtual-host>
    </virtual-hosts>

    <!-- Parameters available in runtime (tag-name is the parameter name, its content is the parameter value) -->
    <parameters>
    </parameters>

    <security>

        <!-- IP addresses that will be allowed to connect to this application -->
        <allowed-client-addresses>
            <address>127.0.0.1</address>
        </allowed-client-addresses>

        <!-- IP addresses that will not be allowed to connect to this application -->
        <restricted-client-addresses>
            <address>8.8.8.8</address>
        </restricted-client-addresses>

        <!-- role hierarchy of this application (roles are associated to users, and provide them permissions) -->
        <roles>
            <administrator>
                <it-operator>
                    <permission>servers\..*</permission>
                </it-operator>
                <permission>.*</permission>
            </administrator>
        </roles>

    </security>

</application>

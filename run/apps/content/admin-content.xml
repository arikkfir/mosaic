<?xml version="1.0"?>

<web-content xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns="https://github.com/arikkfir/mosaic/web/content"
             xsi:schemaLocation="https://github.com/arikkfir/mosaic/web/content https://github.com/arikkfir/mosaic/web/content-5.0.0">

    <caching>
        <pattern path="/**/*.css" period="1 hour"/>
        <pattern path="/**" period="0"/>
    </caching>

    <snippets>
        <snippet name="defaultPage">
            <content><![CDATA[
                    <!doctype html>
                    <html>
                    <head>
                        <title>This is the template title~</title>
                    </head>
                    <body>
                        <h1>Title here :)</h1>
                        <header>
                            <@renderPanel name="header" />
                        </header>
                        <@renderPanel name="content" />
                        <footer>
                            <@renderPanel name="footer" />
                        </footer>
                    </body>
                    </html>
            ]]></content>
        </snippet>
        <snippet name="product-logo">
            <content><![CDATA[
                <h2>PRODUCT LOGO HERE</h2>
            ]]></content>
        </snippet>
        <snippet name="product-name">
            <content><![CDATA[
                <h3>PRODUCT NAME HERE</h3>
            ]]></content>
        </snippet>
        <snippet name="company-logo">
            <content><![CDATA[
                <h4>COMPANY LOGO HERE</h4>
            ]]></content>
        </snippet>
        <snippet name="welcome">
            <content><![CDATA[
                <p>Welcome to the Administration application.</p>
            ]]></content>
        </snippet>
        <snippet name="footer">
            <content><![CDATA[
                <small>Copyright bla bla</small>
            ]]></content>
        </snippet>
    </snippets>

    <templates>
        <template name="default" display-name="Default Template" snippet="defaultPage">
            <panels>
                <panel name="header" display-name="Page Header">
                    <blocks>
                        <block name="product-logo" snippet="product-logo"/>
                        <block name="product-name" snippet="product-name"/>
                        <block name="company-logo" snippet="company-logo"/>
                    </blocks>
                </panel>
                <panel name="content" display-name="Page Content"/>
                <panel name="footer" display-name="Page Footer">
                    <blocks>
                        <block name="footer" snippet="footer"/>
                    </blocks>
                </panel>
            </panels>
        </template>
    </templates>

    <pages>
        <page name="index" active="true" display-name="Home page" template="default">
            <url-paths>
                <path languages="en">
                    /home
                </path>
            </url-paths>
            <blocks>
                <block name="welcome" snippet="welcome" panel="content"/>
            </blocks>
        </page>
    </pages>

</web-content>

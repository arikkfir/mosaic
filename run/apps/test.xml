<?xml version="1.0"?>

<application xmlns="https://github.com/arikkfir/mosaic/web/application"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://github.com/arikkfir/mosaic/web/application https://github.com/arikkfir/mosaic/web/application-5.0.0"
             display-name="Administrationn Console">

    <virtual-hosts>
        <virtual-host>test.arik.local</virtual-host>
    </virtual-hosts>

    <content-languages default-language="en" support-uri-selection="true">
        <language>en</language>
        <language>he</language>
    </content-languages>

    <unknown-url-page>404</unknown-url-page>
    <internal-error-page>500</internal-error-page>
    <resource-compression>true</resource-compression>

    <parameters>
        <parameter name="p1">v1</parameter>
    </parameters>

    <security>
        <authentication>
            <realms>
                <realm>local</realm>
            </realms>
            <default-authenticators>
                <authenticator>BASIC_AUTH_HEADER</authenticator>
                <authenticator>REMEMBER_ME_COOKIE</authenticator>
                <authenticator>SESSION_COOKIE</authenticator>
                <authenticator>FORM_PAGE</authenticator>
            </default-authenticators>
            <service-authenticators>
                <authenticator>REMEMBER_ME_COOKIE</authenticator>
                <authenticator>SESSION_COOKIE</authenticator>
            </service-authenticators>
            <resources-authenticators>
                <authenticator>REMEMBER_ME_COOKIE</authenticator>
                <authenticator>SESSION_COOKIE</authenticator>
            </resources-authenticators>
            <page-authenticators>
                <authenticator>REMEMBER_ME_COOKIE</authenticator>
                <authenticator>SESSION_COOKIE</authenticator>
                <authenticator>FORM_PAGE</authenticator>
            </page-authenticators>
            <form-login-url url="/login"/>
        </authentication>
        <permission-policy>mosaic</permission-policy>
        <access-denied-page>403</access-denied-page>
    </security>

    <content-roots>
        <content-root>/home/arik/Documents/Projects/mosaic/run/web/test</content-root>
    </content-roots>

</application>
